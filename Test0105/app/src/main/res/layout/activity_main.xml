<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/checkboxLinearLayout"
    >

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="red 레드칼라 선택"
        android:textSize="12pt"
        />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="blue 블루칼라 선택"
        android:textSize="12pt"
        />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="green 그린칼라 선택"
        android:textSize="12pt"
        />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="orange 오렌지칼라 선택"
        android:textSize="12pt"
        />

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pink 핑크칼라 선택"
        android:textSize="12pt"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="체크박스 출력"
        android:textSize="16pt"
        android:textAlignment="center"
        android:background="#FFFF00"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:text=" - "
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="15pt"
            />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton
            android:id="@+id/rbMan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남자"
            android:textSize="14pt"
            />
        <RadioButton
            android:id="@+id/rbWoman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여자"
            android:textSize="14pt"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="라디오출력"
        android:textSize="14pt"
        android:textAlignment="center"
        android:background="#FFFF00"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:text=" - "
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="15pt"
            />
    </LinearLayout>

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:textOn="영어변환"
        android:textOff="한글변환"
        android:textSize="14pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="한글/영문 출력"
        android:textSize="14pt"
        android:textAlignment="center"
        android:background="#FFFF00"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/hydran"
        android:scaleType="fitXY"
    />

</LinearLayout>