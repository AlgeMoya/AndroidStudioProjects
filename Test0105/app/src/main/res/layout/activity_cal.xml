<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/view"
        android:text=""
        android:textSize="26pt"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

    <EditText
        android:id="@+id/edit"
        android:text=""
        android:textSize="26pt"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <Button
                android:id="@+id/allclear"
                android:text="ce"
                android:textSize="16pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
            android:layout_height="match_parent"
                android:onClick="num" />

            <Button
                android:id="@+id/delete"
                android:text="←"
                android:textSize="16pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="num" />

            <Button
                android:id="@+id/sign"
                android:text="+/-"
                android:textSize="16pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="num" />

            <Button
                android:id="@+id/divide"
                android:text="/"
                android:textSize="16pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="symbol" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/num7"
                android:text="7"
                android:textSize="16pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="num" />

            <Button
                android:id="@+id/num8"
                android:text="8"
                android:textSize="16pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="num" />

            <Button
                android:id="@+id/num9"
                android:text="9"
                android:textSize="16pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="num" />

            <Button
                android:id="@+id/multiply"
                android:text="*"
                android:textSize="16pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="symbol" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/num4"
                android:text="4"
                android:textSize="16pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="num" />

            <Button
                android:id="@+id/num5"
                android:text="5"
                android:textSize="16pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="num" />

            <Button
                android:id="@+id/num6"
                android:text="6"
                android:textSize="16pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="num" />

            <Button
                android:id="@+id/subtraction"
                android:text="-"
                android:textSize="16pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="symbol" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/num1"
                android:text="1"
                android:textSize="16pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="num" />

            <Button
                android:id="@+id/num2"
                android:text="2"
                android:textSize="16pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="num" />

            <Button
                android:id="@+id/num3"
                android:text="3"
                android:textSize="16pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="num" />

            <Button
                android:id="@+id/add"
                android:text="+"
                android:textSize="16pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="symbol" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/num0"
                android:text="0"
                android:textSize="16pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="num" />

            <Button
                android:id="@+id/decimal"
                android:text="."
                android:textSize="16pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="num" />

            <Button
                android:id="@+id/equal"
                android:text="="
                android:textSize="16pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="equal" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>